{
  "name": "web-app",
  "private": true,
  "version": "0.0.1",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "debug": "node --inspect-brk index.js",
    "dev": "clear && concurrently 'cd ./frontend/ && npm run dev' 'npx tsc --watch --preserveWatchOutput --project tsconfig.json' 'npx tsc-alias -w -p tsconfig.json' 'cross-env NODE_ENV=development nodemon dist/index.js --delay 1'",
    "preserve": "concurrently 'npx tsc --preserveWatchOutput --project tsconfig.json' 'npx tsc-alias -p tsconfig.json'",
    "start": "clear && cd ./frontend/ && npm run build && cd ../ && cross-env NODE_ENV=production TS_NODE_BASEURL=./dist node -r tsconfig-paths/register dist/index.js"
  },
  "dependencies": {
    "@shopify/shopify-api": "^5.3.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "date-fns": "^2.29.3",
    "express": "^4.18.2",
    "express-validator": "^6.14.2",
    "mongoose": "^6.8.2",
    "multer": "^1.4.5-lts.1",
    "serve-static": "^1.15.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@shelf/jest-mongodb": "^4.1.4",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "axios": "^1.2.2",
    "concurrently": "^7.6.0",
    "cors": "^2.8.5",
    "date-fns-tz": "^1.3.7",
    "jest": "^29.3.1",
    "jest-environment-node": "^29.3.1",
    "jsonwebtoken": "^9.0.0",
    "mongodb-memory-server": "^8.10.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.2",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.4",
    "wait-for-expect": "^3.0.2"
  }
}
